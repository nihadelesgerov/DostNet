@model InterViewQuestionDTO
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DostNet - Müsahibə sualı paylaş</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
    <link rel="icon" type="image/x-icon" href="~/Images/DostNetLogo.jpg">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="navbar-left">
            <a asp-action="HomePage" class="logo">DostNet</a>
            <a asp-action="Jobs" asp-controller="Info">İşlər</a>
            <a asp-action="News" asp-controller="Info">Xəbərlər</a>
        </div>
    </nav>

    <!-- Body -->
    <div class="content">
        <div class="column">
            <h2>Sual Paylaş</h2>
            <form asp-action="ShareIVQ" method="post">
                <label >Başlıq</label>
                <input asp-for="Title" type="text"  placeholder="Başlıq daxil edin" >
                <span style="color:red" asp-validation-for="Title"></span>

                <label>Sualın Tam Mətni</label>
                <textarea asp-for="Question" placeholder="Sualınızı daxil edin" ></textarea>
                <span style="color:red" asp-validation-for="Question"></span>

                <label >Sahə</label>
                <input asp-for="Field" type="text"  placeholder="Sahəni daxil edin məs Back,Xamarin,WPF...." >
                <span style="color:red" asp-validation-for="Field"></span>

                <label>Cavabı daxil edin</label>
                    <textarea style="width: 770px; min-height: 100px; resize: vertical; overflow: auto;" asp-for="AnswerLikeTopic" id="answer" name="answer" placeholder="Sualın cavabını daxil edin "></textarea>
                <span style="color:red" asp-validation-for="AnswerLikeTopic"></span>


                <div class="buttons">
                    <form asp-action="ShareIQV" method="post" asp-controller="Main">
                        <button type="submit" class="share-button">Paylaş</button>
                    </form>
                    <a asp-action="Account" type="reset" class="cancel-button">Ləğv Et</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-more">
            <a asp-action="AboutUs" asp-controller="Info">About Us</a>
            <a asp-action="Contact" asp-controller="Info">Contact Us</a>
            <a asp-action="PrivacyPolicy" asp-controller="Info">Privacy Policy</a>
            <a asp-action="Terms" asp-controller="Info">Terms</a>
            <a asp-action="Report" asp-controller="Info">Report a Bug</a>
            <a href="#">Partners</a>
        </div>
        <p>© 2024 DostNet. Bütün hüquqlar qorunur.</p>
    </footer>

    <style>
        /* General Styles */
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #ffffff;
            color: #333;
        }

        /* Navbar */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #512bd4;
            padding: 15px 20px;
            color: white;
        }

            .navbar a {
                color: white;
                text-decoration: none;
                margin: 0 10px;
                font-weight: 400;
                transition: color 0.3s;
            }

                .navbar a:hover {
                    color: #8661c1;
                }

        /* Content */
        .content {
            display: flex;
            justify-content: center;
            padding: 20px 5%;
        }

        .column {
            flex: 1;
            padding: 20px;
            max-width: 800px;
            width: 100%;
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        label {
            font-weight: 600;
        }

        input[type="text"], textarea, select {
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 16px;
        }

        textarea {
            resize: vertical;
            min-height: 150px;
        }

        pre code {
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 14px;
            min-height: 200px;
            background-color: #f8f4fc;
            white-space: pre-wrap;
            word-wrap: break-word;
        }

        .buttons {
            display: flex;
            justify-content: space-between;
            gap: 10px;
        }

        .share-button, .cancel-button {
            padding: 12px 20px;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            width: 48%; /* Hər iki düymənin uzunluğunu artırdım */
        }

        .share-button {
            background-color: #512bd4;
            color: white;
            border: none;
        }

            .share-button:hover {
                background-color: #8661c1;
            }

        .cancel-button {
            background-color: red;
            color: white;
            border: none;
        }

            .cancel-button:hover {
                background-color: #ff4d4d;
            }

        /* Footer */
        .footer {
            background-color: #512bd4;
            color: white;
            text-align: center;
            padding: 20px;
            font-size: 16px;
            margin-top: auto;
            transition: color 0.3s;
        }

        .footer-links a,
        .footer-more a {
            color: #8661c1;
            text-decoration: none;
            margin: 0 10px;
            transition: color 0.3s;
        }

            .footer-links a:hover,
            .footer-more a:hover {
                color: white;
                text-decoration: underline;
            }
    </style>

</body>
</html>

